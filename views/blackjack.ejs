<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blackjack</title>
    <script src="/js/blackjackLogic.js" defer></script>
</head>
<body>
    <%- include('partials/nav'); %>

    <h1>Blackjack Table</h1>
    <% if (dealer) { %>
      <p>Current Dealer: <strong><%= dealer.name %></strong> (<%= dealer.difficulty %>)</p>
    <% } %>

    <div>
        <div>Dealer</div>
        <p>Cards: <span id="dealerCardNumber">?</span></p>
    </div>

    <div>
        <div>Player</div>
        <div>Score: <span id="playerScore">0</span></div>
        <p>Cards: <span id="playerCardNumber"></span></p>

        <div class="controls">
            <button id="hitBtn" onclick="playerHit()">Hit</button>
            <button id="standBtn" onclick="playerStand()">Stand</button>
            <button id="doubleBtn" onclick="playerDouble()">Double</button>
            <button id="surrenderBtn" onclick="playerSurrender()">Surrender</button>
        </div>
    </div>

    <div>
        <div><%= cpus[0]?.name %></div>
        <p>Cards: <span id="cpu1CardNumber"></span></p>
    </div>

    <div>
        <div><%= cpus[1]?.name %></div>
        <p>Cards: <span id="cpu2CardNumber"></span></p>
    </div>

    <div>
        <div><%= cpus[2]?.name %></div>
        <p>Cards: <span id="cpu3CardNumber"></span></p>
    </div>

    <pre id="gameInfo"></pre>
</body>
</html>
