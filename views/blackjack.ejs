<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blackjack</title>
    <script src="/js/blackjackLogic.js" defer></script>
</head>
<body>
    <%- include('partials/nav'); %>

    <h1>Blackjack Table</h1>
    <div id="quoteBox" style="font-style: italic; margin-bottom: 15px;">
    Loading Gambling Enrichment...
    </div>

    <% if (dealer) { %>
      <p>Current Dealer: <strong><%= dealer.name %></strong> (<%= dealer.difficulty %>)</p>
    <% } %>

    <div>
        <div>Dealer</div>
        <p>Cards: <span id="dealerCardNumber">?</span></p>
    </div>

    <div>
        <div>Player</div>
        <div>Score: <span id="playerScore">0</span></div>
        <p>Cards: <span id="playerCardNumber"></span></p>

        <div class="controls">
            <button id="hitBtn" onclick="playerHit()">Hit</button>
            <button id="standBtn" onclick="playerStand()">Stand</button>
            <button id="doubleBtn" onclick="playerDouble()">Double</button>
            <button id="surrenderBtn" onclick="playerSurrender()">Surrender</button>
        </div>
    </div>

    <div>
        <div>CPU 1</div>
        <p>Cards: <span id="cpu1CardNumber"></span></p>
    </div>

    <div>
        <div>CPU 2</div>
        <p>Cards: <span id="cpu2CardNumber"></span></p>
    </div>

    <div>
        <div>CPU 3</div>
        <p>Cards: <span id="cpu3CardNumber"></span></p>
    </div>

    <pre id="gameInfo"></pre>

    <script>
  async function loadQuote() {
    try {
      const response = await fetch("https://zenquotes.io/api/random");
      const data = await response.json();
      const quote = data[0].q;
      const author = data[0].a;
      document.getElementById("quoteBox").textContent = `"${quote}" â€” ${author}`;
    } catch (err) {
      console.error("Failed to load quote:", err);
      document.getElementById("quoteBox").textContent =
        "Just win the game bro.";
    }
  }

  loadQuote();
  setInterval(loadQuote, 15000);

</script>

</body>
</html>
